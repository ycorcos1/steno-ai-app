{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/stenoai-*-connections",
        "arn:aws:dynamodb:*:*:table/stenoai-*-connections/index/*",
        "arn:aws:dynamodb:*:*:table/stenoai-*-document-rooms",
        "arn:aws:dynamodb:*:*:table/stenoai-*-document-rooms/index/*"
      ]
    }
  ]
}
